@section javascript
{
    <link href="~/VendorJS/sliderpro/slider-pro.min.css" rel="stylesheet" />
    <script src="~/VendorJS/sliderpro/jquery.sliderPro.min.js"></script>
    <script type="text/javascript">
        function ImageOnClick(ImgPath) {
            $("#modalimg").attr("src", ImgPath);
            document.getElementById('modal01').style.display = 'block'
        }
        function OnModalClick(Modal) {
            Modal.style.display = 'none'
            $(".title h1").attr("z-index", "10");
        }
        function setIFrameSize() {
            var ogWidth = 700;
            var ogHeight = 600;
            var ogRatio = ogWidth / ogHeight;
            var windowWidth = $(window).width();
            var windowHeight = $(window).height();
            if (windowWidth < 530) {
                var parentDivWidth = $(".iframe-class").parent().width();
                var newHeight = (parentDivWidth / ogRatio);
                $(".iframe-class").addClass("iframe-class-resize");
                $(".iframe-class-resize").css("width", parentDivWidth);
                $(".iframe-class-resize").css("height", newHeight);
                if ($("#modal01").css("display") == 'block') {
                    $("#modalspan").css("display", 'none');
                }
            } else {
                $(".iframe-class").removeClass("iframe-class-resize").css({ width: '560', height: '315' });
                if ($("#modal01").css("display") == 'block') {
                    $("#modalspan").css("display", 'inline');
                }
            }
            $("#modalimg").css("height", windowHeight - 80);
        }
        $(window).resize(function () {
            setIFrameSize();
        });
        $(document).ready(function () {
            setIFrameSize();
        });
        cofControllers.controller('NascarCtrl', function NascarController($scope, $http, $location, $timeout, PackagesService) {
            $scope.toggleTabBar = function (e) {
                var anchorCenter;
                if (e) {
                    $scope.selectedTab = e.target.text.toLowerCase();
                    anchorCenter = $(e.target).position().left + $(e.target).width() / 2;
                } else {
                    $scope.selectedTab = "truck";
                    anchorCenter = $('.tab-bar a').eq(0).position().left + $('.tab-bar a').eq(0).width() / 2;
                }
                $('.notch').animate({
                    'left': anchorCenter
                });
            };
        });
    </script>
}
